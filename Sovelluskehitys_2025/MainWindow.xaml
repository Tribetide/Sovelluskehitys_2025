<mah:MetroWindow x:Class="Sovelluskehitys_2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sovelluskehitys_2025"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Tilaukset" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Tiedosto">
                <MenuItem Header="Avaa" Click="Avaa_Menu_Click"/>
                <MenuItem Header="Sulje" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Ohje">
                <MenuItem Header="Tietoja ohjelmasta"/>
            </MenuItem>
        </Menu>
        <TabControl SelectionChanged="TabControl_SelectionChanged" Margin="0,26,0,24">
            <TabItem Header="Tuotteet">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="82*"/>
                        <ColumnDefinition Width="300*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Hae tiedot" HorizontalAlignment="Left" Margin="68,30,0,0" VerticalAlignment="Top" Height="40" Width="144" Click="Button_Click_1" RenderTransformOrigin="0.451,-0.747" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <DataGrid x:Name="tuotelista" Margin="68,93,62,79" Grid.Column="1" AutoGeneratingColumn="Tuotelista_AutoGeneratingColumn" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Lisää/poista">
                <Grid>
                    <Button Content="Lisää tuote" HorizontalAlignment="Left" Margin="200,145,0,0" VerticalAlignment="Top" Height="40" Width="136" Click="Button_Click"/>
                    <TextBox x:Name="tekstikentta_1" HorizontalAlignment="Left" Margin="200,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20"/>
                    <TextBox x:Name="tekstikentta_2" HorizontalAlignment="Left" Margin="200,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20" RenderTransformOrigin="1.005,0.536"/>
                    <ComboBox x:Name="cb_tuotelista" HorizontalAlignment="Left" Margin="520,46,0,0" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="tekstikentta_3" HorizontalAlignment="Left" Margin="200,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20" RenderTransformOrigin="1.005,0.536"/>
                    <Label Content="Nimi" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Hinta" HorizontalAlignment="Left" Margin="100,74,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Varastosaldo" HorizontalAlignment="Left" Margin="100,111,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="Poista tuote" HorizontalAlignment="Left" Margin="533,143,0,0" VerticalAlignment="Top" Height="42" Width="107" Click="Button_Click_2"/>
                    <CheckBox x:Name="valinta_boksi" Content="Admin" HorizontalAlignment="Left" Margin="172,302,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="valinta_boksi_Unchecked"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="asiakkaat_tab" Header="Asiakkaat">
                <Grid>
                    <DataGrid x:Name="asiakaslista" Margin="72,193,72,20"/>
                    <Button Content="Lisää asiakas" HorizontalAlignment="Left" Margin="317,139,0,0" VerticalAlignment="Top" Width="109" Height="33" Click="Button_Click_3"/>
                    <TextBox x:Name="asiakas_nimi" HorizontalAlignment="Left" Margin="210,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                    <TextBox x:Name="asiakas_osoite" HorizontalAlignment="Left" Margin="210,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                    <TextBox x:Name="asiakas_puhelin" HorizontalAlignment="Left" Margin="210,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tilaukset_tab" Header="Tilaukset" VerticalAlignment="Center">
                <Grid>
                    <DataGrid x:Name="tilauslista" Margin="0,112,0,36" AutoGenerateColumns="False" CanUserAddRows="False" RowEditEnding="Tilauslista_RowEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tilaus ID" Binding="{Binding id}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Asiakas" Binding="{Binding asiakas}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Osoite" Binding="{Binding osoite}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Tuote" Binding="{Binding tuote}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Määrä" Binding="{Binding maara}" Width="*"/>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="toimita_tilaus" Content="Toimita" Click="Toimita_Tilaus_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="poista_tilaus" Content="Poista" Click="Poista_Tilaus_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ComboBox x:Name="cb_tuote_tilaus" HorizontalAlignment="Left" Margin="106,43,0,0" VerticalAlignment="Top" Width="120"/>
                    <ComboBox x:Name="cb_asiakas_tilaus" HorizontalAlignment="Left" Margin="277,43,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.05,0.095"/>
                    <Button Content="Lisää tilaus" HorizontalAlignment="Left" Margin="497,43,0,0" VerticalAlignment="Top" Height="33" Width="116" Click="Button_Click_4"/>
                    <TextBlock Text="Määrä" Margin="420,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="tb_tilausMaara" Text="1" Margin="420,43,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"/>

                </Grid>
            </TabItem>
            <TabItem Header="Toimitetut">
                <Grid>
                    <DataGrid x:Name="toimitetut_lista" Margin="70,93,70,52" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tilaus ID" Binding="{Binding id}" Width="*"/>
                            <DataGridTextColumn Header="Asiakas" Binding="{Binding asiakas}" Width="*"/>
                            <DataGridTextColumn Header="Osoite" Binding="{Binding osoite}" Width="*"/>
                            <DataGridTextColumn Header="Tuote" Binding="{Binding tuote}" Width="*"/>
                            <DataGridTextColumn Header="Määrä" Binding="{Binding maara}" Width="*" IsReadOnly="True"/>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="peruuta_tilaus" Content="Peruuta" Click="Peruuta_Tilaus_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <StatusBar VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="tilaviesti" Text="Valmis"/>
            </StatusBarItem>
        </StatusBar>


    </Grid>
</mah:MetroWindow>
