<mah:MetroWindow x:Class="Sovelluskehitys_2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sovelluskehitys_2025"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Tilaukset" Height="620" Width="980" Loaded="Window_Loaded" Closing="Window_Closing">
    <mah:MetroWindow.Resources>
        <CollectionViewSource x:Key="KategoriaOptions"/>
    </mah:MetroWindow.Resources>
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Tiedosto">
                <MenuItem Header="Avaa" Click="Avaa_Menu_Click"/>
                <MenuItem Header="Sulje" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Ohje">
                <MenuItem Header="Tietoja ohjelmasta"/>
            </MenuItem>
        </Menu>
        <TabControl SelectionChanged="TabControl_SelectionChanged" Margin="0,26,0,24">
            <TabItem Header="Tuotteet">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="82*"/>
                        <ColumnDefinition Width="300*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Hae tiedot" HorizontalAlignment="Left" Margin="68,30,0,0" VerticalAlignment="Top" Height="40" Width="144" Click="Button_Click_1" RenderTransformOrigin="0.451,-0.747" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <DataGrid x:Name="tuotelista"
                              Margin="68,93,62,79"
                              Grid.Column="1"
                              Grid.ColumnSpan="2"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              RowEditEnding="Tuotelista_RowEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Nimi" Binding="{Binding nimi}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Hinta" Binding="{Binding hinta}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Varastosaldo" Binding="{Binding varastosaldo}" Width="*" IsReadOnly="True"/>
                            <DataGridComboBoxColumn Header="Kategoria"
                                                    SelectedValueBinding="{Binding kategoria_id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    SelectedValuePath="id"
                                                    DisplayMemberPath="nimi"
                                                    ItemsSource="{Binding Source={StaticResource KategoriaOptions}}"
                                                    Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Lisää/poista">
                <Grid>
                    <Button Content="Lisää tuote" HorizontalAlignment="Left" Margin="200,185,0,0" VerticalAlignment="Top" Height="40" Width="136" Click="Button_Click"/>
                    <TextBox x:Name="tekstikentta_1" HorizontalAlignment="Left" Margin="200,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20"/>
                    <TextBox x:Name="tekstikentta_2" HorizontalAlignment="Left" Margin="200,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20" RenderTransformOrigin="1.005,0.536"/>
                    <ComboBox x:Name="cb_tuotelista" HorizontalAlignment="Left" Margin="520,46,0,0" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="tekstikentta_3" HorizontalAlignment="Left" Margin="200,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20" RenderTransformOrigin="1.005,0.536"/>
                    <ComboBox x:Name="cb_kategoria_tuote" HorizontalAlignment="Left" Margin="200,145,0,0" VerticalAlignment="Top" Width="136"/>
                    <Label Content="Nimi" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Hinta" HorizontalAlignment="Left" Margin="100,74,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Varastosaldo" HorizontalAlignment="Left" Margin="100,111,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Kategoria" HorizontalAlignment="Left" Margin="100,140,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="Poista tuote" HorizontalAlignment="Left" Margin="533,143,0,0" VerticalAlignment="Top" Height="42" Width="107" Click="Button_Click_2"/>
                    <CheckBox x:Name="valinta_boksi" Content="Admin" HorizontalAlignment="Left" Margin="172,302,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="valinta_boksi_Unchecked"/>
                </Grid>
            </TabItem>
            <TabItem Header="Kategoriat">
                <Grid>
                    <DataGrid x:Name="kategorialista" Margin="72,193,72,20"/>
                    <Button Content="Lisää kategoria" HorizontalAlignment="Left" Margin="317,139,0,0" VerticalAlignment="Top" Width="109" Height="33" Click="Lisaa_Kategoria_Click"/>
                    <TextBox x:Name="kategoria_nimi" HorizontalAlignment="Left" Margin="210,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                    <TextBox x:Name="kategoria_kuvaus" HorizontalAlignment="Left" Margin="210,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                    <ComboBox x:Name="cb_kategoria_poisto" HorizontalAlignment="Left" Margin="520,39,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Poista kategoria" HorizontalAlignment="Left" Margin="533,72,0,0" VerticalAlignment="Top" Height="33" Width="107" Click="Poista_Kategoria_Click"/>
                    <Label Content="Nimi" HorizontalAlignment="Left" Margin="112,34,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Kuvaus" HorizontalAlignment="Left" Margin="112,65,0,0" VerticalAlignment="Top" Width="86"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="asiakkaat_tab" Header="Asiakkaat">
                <Grid>
                    <DataGrid x:Name="asiakaslista" Margin="72,193,72,20"/>
                    <Button Content="Lisää asiakas" HorizontalAlignment="Left" Margin="317,139,0,0" VerticalAlignment="Top" Width="109" Height="33" Click="Button_Click_3"/>
                    <TextBox x:Name="asiakas_nimi" HorizontalAlignment="Left" Margin="210,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                    <TextBox x:Name="asiakas_osoite" HorizontalAlignment="Left" Margin="210,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                    <TextBox x:Name="asiakas_puhelin" HorizontalAlignment="Left" Margin="210,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tilaukset_tab" Header="Tilaukset" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="220"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,12,20,0">
                        <TextBlock Text="Tuote" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox x:Name="cb_tuote_tilaus" Width="140" Margin="0,0,12,0"/>
                        <TextBlock Text="Asiakas" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox x:Name="cb_asiakas_tilaus" Width="160" Margin="0,0,12,0"/>
                        <TextBlock Text="Määrä" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox x:Name="tb_tilausMaara" Text="1" Width="50" Margin="0,0,12,0"/>
                        <Button Content="Lisää rivi" Width="100" Margin="0,0,8,0" Click="Lisaa_Rivi_Click"/>
                        <Button Content="Tee tilaus" Width="100" Click="Tee_Tilaus_Click"/>
                    </StackPanel>

                    <GroupBox Header="Ostoskori" Grid.Row="1" Margin="20,8,20,8">
                        <DataGrid x:Name="ostoskori_lista" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tuote" Binding="{Binding tuote}" Width="*"/>
                                <DataGridTextColumn Header="Määrä" Binding="{Binding maara}" Width="Auto"/>
                                <DataGridTextColumn Header="Hinta" Binding="{Binding hinta}" Width="Auto"/>
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Poista" Padding="6,2" Click="Poista_OstoskoriRivi_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <DataGrid x:Name="tilauslista"
                              Grid.Row="2"
                              Margin="0,8,0,36"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              MinColumnWidth="90"
                              PreviewMouseLeftButtonDown="Tilauslista_PreviewMouseLeftButtonDown"
                              RowDetailsVisibilityMode="VisibleWhenSelected">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tilaus ID" Binding="{Binding Id}" Width="120" MinWidth="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Asiakas" Binding="{Binding AsiakasNimi}" Width="2*" MinWidth="160" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Osoite" Binding="{Binding Osoite}" Width="3*" MinWidth="220" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Yhteensä" Binding="{Binding Yhteensa, StringFormat=N2}" Width="140" MinWidth="120" IsReadOnly="True"/>
                            <DataGridTemplateColumn Width="150" MinWidth="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Name="toimita_tilaus" Content="Toimita" Margin="2,0" Click="Toimita_Tilaus_Click"/>
                                            <Button Name="poista_tilaus" Content="Poista" Margin="2,0" Click="Poista_Tilaus_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" Background="WhiteSmoke" Margin="10,5,10,10" Padding="8">
                                    <DataGrid ItemsSource="{Binding Rivit}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              RowEditEnding="TilausRivi_RowEditEnding"
                                              MinColumnWidth="90"
                                              BorderThickness="0"
                                              Background="Transparent"
                                              HeadersVisibility="Column">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tuote" Binding="{Binding TuoteNimi}" Width="2*" MinWidth="220" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Määrä" Binding="{Binding Maara}" Width="120" MinWidth="100"/>
                                            <DataGridTextColumn Header="Hinta" Binding="{Binding Rivihinta, StringFormat=N2}" Width="140" MinWidth="120" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Toimitetut">
                <Grid>
                    <DataGrid x:Name="toimitetut_lista"
                              Margin="20,20,20,20"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              MinColumnWidth="90"
                              PreviewMouseLeftButtonDown="Toimitetutlista_PreviewMouseLeftButtonDown"
                              RowDetailsVisibilityMode="VisibleWhenSelected">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tilaus ID" Binding="{Binding Id}" Width="120" MinWidth="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Asiakas" Binding="{Binding AsiakasNimi}" Width="2*" MinWidth="160" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Osoite" Binding="{Binding Osoite}" Width="3*" MinWidth="220" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Yhteensä" Binding="{Binding Yhteensa, StringFormat=N2}" Width="140" MinWidth="120" IsReadOnly="True"/>
                            <DataGridTemplateColumn Width="140" MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="peruuta_tilaus" Content="Peruuta" Click="Peruuta_Tilaus_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" Background="WhiteSmoke" Margin="10,5,10,10" Padding="8">
                                    <DataGrid ItemsSource="{Binding Rivit}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              BorderThickness="0"
                                              Background="Transparent"
                                              HeadersVisibility="Column"
                                              MinColumnWidth="90">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tuote" Binding="{Binding TuoteNimi}" Width="2*" MinWidth="220" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Määrä" Binding="{Binding Maara}" Width="120" MinWidth="100" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Hinta" Binding="{Binding Rivihinta, StringFormat=N2}" Width="140" MinWidth="120" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <StatusBar VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="tilaviesti" Text="Valmis"/>
            </StatusBarItem>
        </StatusBar>


    </Grid>
</mah:MetroWindow>
